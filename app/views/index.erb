<script type="text/x-handlebars" data-template-name="line">
  <div class="modal fade" id="line">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button {{action 'close' 'line'}} type="button" class="close">&times;</button>
          <h4 class="modal-title">Add Line</h4>
        </div>
        <div class="modal-body">
          <form class="form-horizontal">
            <div class="form-group">
              <label for="title" class="col-lg-2 control-label">Quantity</label>
              <div class="col-lg-10">
                {{view App.NumberField valueBinding="quantity" min="0" class="form-control" id="quantity" placeholder="Quantity"}}
              </div>
            </div>
            <div class="form-group">
              <label for="title" class="col-lg-2 control-label">Title</label>
              <div class="col-lg-10">
                {{view Ember.TextField valueBinding="title" class="form-control" id="title" placeholder="Title"}}
              </div>
            </div>
            <div class="form-group">
              <label for="sku" class="col-lg-2 control-label">SKU</label>
              <div class="col-lg-10">
                {{view Ember.TextField valueBinding="sku" class="form-control" id="sku" placeholder="SKU"}}
              </div>
            </div>
            <div class="form-group">
              <label for="amount" class="col-lg-2 control-label">Amount</label>
              <div class="col-lg-10">
                {{view App.NumberField valueBinding="amount" class="form-control" step="0.1" id="amount" placeholder="amount"}}
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button {{action 'close' 'line'}} type="button" class="btn btn-default">Close</button>
          <button {{action 'add'}} type="button" class="btn btn-primary">Add</button>
        </div>
      </div>
    </div>
  </div>
</script>

