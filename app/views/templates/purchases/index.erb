<script type="text/x-handlebars" data-template-name="purchases/index">
  <div class="clearfix">
    <h2 class="pull-left">Purchases</h2>
    <button {{action 'new'}} type="button" class="header btn btn-primary btn-lg pull-right"><span class="glyphicon glyphicon-plus"></span> New Purchase</button>
  </div>
  <hr>
  <div class="filter">
    <div class="filter_container row">
      <div class='filter_nav col-lg-4'>
        <button {{action 'all'}} type="button" {{bindAttr class=":all :btn isFilterAll:btn-primary:btn-default"}}>All</button>
        <button {{action 'newest'}} type="button" {{bindAttr class=":newest :btn isFilterNewest:btn-primary:btn-default"}}>Newest</button>
        <button {{action 'recent'}} type="button" {{bindAttr class=":recent :btn isFilterRecent:btn-primary:btn-default"}}>Recent</button>
      </div>
      <div class='filter_search col-lg-8'>
        <div class='filter_search_form pull-right'>
          <form class="search form-inline">
            <div class="form-group">
              {{view Ember.TextField valueBinding="query" class="form-control" placeholder="Search..."}}
            </div>
            <button type="submit" {{action 'search'}} class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Search</button>
            <button type="button" {{action 'clear'}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Clear</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <table class="purchases table table-striped">
    <thead>
      <tr>
        <th>Created</th>
        <th>Updated</th>
        <th>User</th>
        <th>Till</th>
        <th>Customer</th>
        <th>Quantity</th>
        <th>Subtotal</th>
        <th>Complete</th>
        <th>Edit</th>
        <th>View</th>
        <th>Print</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each purchase in controller}}
      <tr>
        <td>{{date purchase.createdAt "%m-%d-%Y %I:%M %p"}}</td>
        <td>{{date purchase.updatedAt "%m-%d-%Y %I:%M %p"}}</td>
        <td>
          {{#if purchase.user}}
          {{purchase.user.fullname}}
          {{else}}
          None
          {{/if}}
        </td>
        <td>
          {{#if purchase.till}}
          {{purchase.till.name}}
          {{else}}
          None
          {{/if}}
        </td>
        <td>
          {{#if purchase.customer}}
          {{purchase.customer.fullname}}
          {{else}}
          None
          {{/if}}
        </td>
        <td>{{purchase.quantity}}</td>
        <td>${{currency purchase.cashSubtotal}} (${{currency purchase.creditSubtotal}})</td>
        <td>{{boolean purchase.complete}}</td>
        <td>
          <button {{action 'load' purchase}} {{bindAttr disabled='purchase.complete'}} type="button" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
        </td>
        <td>
          <button {{action 'view' purchase}} type="button" class="btn">View</button>
        </td>
        <td>
          <button {{action 'print' purchase}} type="button" class="btn"><span class="glyphicon glyphicon-print"></span> Print</button>
        </td>
        <td>
          <button {{action 'delete' purchase}} {{bindAttr disabled='purchase.complete'}} type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</button>
        </td>
      </tr>
      {{else}}
        <tr>
          <td colspan="11"><strong>No Results Found</strong></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <hr>
  <div class="page">
    <div class="page_container row">
      <div class="page_menu col-lg-6">
        {{#if hasPages}}
          <button {{action 'prev'}} type="button" class="prev btn btn-sm" {{bindAttr disabled="cantPagePrev"}}>&#8592; Previous</button>
          <button type="button" class="next btn btn-sm btn-default">{{page}} of {{totalPages}}</button>
          <button {{action 'next'}} type="button" class="next btn btn-sm" {{bindAttr disabled="cantPageNext"}}>Next &#8594;</button>
        {{/if}}
      </div>
      <div class="page_per col-lg-6">
        <div class="pull-right">
          <span class='title'>Per: </span>
          <span>
            <button {{action 'perTen'}} type="button" {{bindAttr class=":ten :btn :btn-sm isPerTen:btn-primary:btn-default"}}>10</button>
            <button {{action 'perTwentyFive'}} type="button" {{bindAttr class=":twenty-five :btn :btn-sm isPerTwentyFive:btn-primary:btn-default"}}>25</button>
            <button {{action 'perFifty'}} type="button" {{bindAttr class=":fifty :btn :btn-sm isPerFifty:btn-primary:btn-default"}}>50</button>
          </span>
        </div>
      </div>
    </div>
  </div>
</script>